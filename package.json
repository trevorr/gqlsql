{
  "name": "gqlsql",
  "version": "0.0.8",
  "description": "GraphQL SQL Resolver Builders",
  "keywords": [
    "graphql",
    "resolver",
    "sql"
  ],
  "homepage": "https://github.com/trevorr/gqlsql#readme",
  "bugs": {
    "url": "https://github.com/trevorr/gqlsql/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trevorr/gqlsql.git"
  },
  "license": "ISC",
  "author": "Trevor Robinson",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc --project src",
    "lint": "eslint 'src/**/*.ts'",
    "lint:ci": "eslint 'src/**/*.ts' --format junit --output-file test-results/eslint/eslint.xml",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "prettier": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "test": "nyc mocha 'test/**/*.test.ts'",
    "test:watch": "nyc mocha -w 'test/**/*.test.ts'"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true
  },
  "nyc": {
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100
  },
  "dependencies": {
    "@types/debug": "^4.1.7",
    "debug": "^4.3.4",
    "dumpable": "^1.0.0",
    "fast-deep-equal": "^3.1.3",
    "graphql": "^16.6.0",
    "knex": "^2.4.2",
    "map-obj": "^4.3.0",
    "snake-case": "^3.0.4",
    "typescript-memoize": "^1.1.1"
  },
  "devDependencies": {
    "@graphql-tools/schema": "^9.0.13",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "chai": "^4.3.7",
    "eslint": "^8.32.0",
    "eslint-plugin-promise": "^6.1.1",
    "graphql-tag": "^2.12.6",
    "mocha": "^10.2.0",
    "mocha-junit-reporter": "^2.2.0",
    "mocha-multi-reporters": "^1.5.1",
    "nyc": "^15.1.0",
    "prettier": "^2.8.3",
    "sinon": "^15.0.1",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
