{
  "name": "gqlsql",
  "version": "0.0.1",
  "description": "GraphQL SQL Resolver Builders",
  "keywords": [
    "graphql",
    "resolver",
    "sql"
  ],
  "homepage": "https://github.com/trevorr/gqlsql#readme",
  "bugs": {
    "url": "https://github.com/trevorr/gqlsql/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trevorr/gqlsql.git"
  },
  "license": "ISC",
  "author": "Trevor Robinson",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc --project src",
    "lint": "eslint 'src/**/*.ts'",
    "lint:ci": "eslint 'src/**/*.ts' --format junit --output-file test-results/eslint/eslint.xml",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "prettier": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "test": "nyc mocha 'test/**/*.test.ts'",
    "test:watch": "nyc mocha -w 'test/**/*.test.ts'"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true
  },
  "nyc": {
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100
  },
  "dependencies": {
    "@types/debug": "^4.1.5",
    "debug": "^4.1.1",
    "dumpable": "^1.0.0",
    "fast-deep-equal": "^3.1.3",
    "graphql": "^14.5.8",
    "knex": "^0.20.4",
    "map-obj": "^4.1.0",
    "snake-case": "^3.0.3",
    "typescript-memoize": "^1.0.0-alpha.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.24",
    "@types/sinon": "^7.5.1",
    "@types/sinon-chai": "^3.2.3",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-promise": "^4.2.1",
    "graphql-tag": "^2.10.1",
    "graphql-tools": "^4.0.6",
    "mocha": "^8.1.3",
    "mocha-junit-reporter": "^1.23.1",
    "mocha-multi-reporters": "^1.1.7",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "sinon": "^8.1.0",
    "sinon-chai": "^3.4.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
